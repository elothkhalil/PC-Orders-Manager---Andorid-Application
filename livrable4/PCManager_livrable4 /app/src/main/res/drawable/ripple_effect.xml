<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

    <!-- Solid background color for the button -->
    <item>
        <shape android:shape="rectangle">
          <!-- Change this to your desired color (orange here) -->
            <corners android:radius="25dp"/>  <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Ripple effect mask for the ripple animation -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Ripple mask color -->
        </shape>
    </item>
</ripple>
